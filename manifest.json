{
  "name": "Amigo",
  "version": "0.0.0.2",
  "description": "Browser based plug-in that helps users navigate through websites through a series of FAQs.",
  "permissions": ["tabs"],
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
   "128": "icons/icon128.png" 
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "manifest_version": 2
}